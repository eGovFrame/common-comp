<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="SysHistory">

	<typeAlias alias="egovMap"
		type="egovframework.rte.psl.dataaccess.util.EgovMap" />
	<typeAlias alias="SysHistoryVO"
		type="egovframework.com.sym.log.slg.service.SysHistoryVO" />
	<typeAlias alias="SysHistory"
		type="egovframework.com.sym.log.slg.service.SysHistory" />

	<resultMap id="historyVO"
		class="egovframework.com.sym.log.slg.service.SysHistoryVO">
		<result property="histId" column="HIST_ID" columnIndex="1" />
		<result property="sysNm" column="SYS_NM" columnIndex="2" />
		<result property="histSeCode" column="HIST_SE_CODE"
			columnIndex="3" />
		<result property="histSeCodeNm" column="HIST_SE_CODE_NM"
			columnIndex="4" />
		<result property="frstRegisterId" column="FRST_REGISTER_ID"
			columnIndex="5" />
		<result property="frstRegisterNm" column="FRST_REGISTER_NM"
			columnIndex="6" />
		<result property="frstRegisterPnttm" column="FRST_REGIST_PNTTM"
			columnIndex="7" />
		<result property="atchFileId" column="ATCH_FILE_ID"
			columnIndex="8" />
	</resultMap>

	<resultMap id="history"
		class="egovframework.com.sym.log.slg.service.SysHistory">
		<result property="histId" column="HIST_ID" columnIndex="1" />
		<result property="sysNm" column="SYS_NM" columnIndex="2" />
		<result property="histSeCode" column="HIST_SE_CODE"
			columnIndex="3" />
		<result property="histCn" column="HIST_CN" columnIndex="4" />
		<result property="frstRegisterId" column="FRST_REGISTER_ID"
			columnIndex="5" />
		<result property="atchFileId" column="ATCH_FILE_ID"
			columnIndex="6" />
	</resultMap>

	<resultMap id="historyDetail"
		class="egovframework.com.sym.log.slg.service.SysHistoryVO">
		<result property="histId" column="HIST_ID" columnIndex="1" />
		<result property="sysNm" column="SYS_NM" columnIndex="2" />
		<result property="histSeCode" column="HIST_SE_CODE"
			columnIndex="3" />
		<result property="histSeCodeNm" column="HIST_SE_CODE_NM"
			columnIndex="4" />
		<result property="histCn" column="HIST_CN" columnIndex="5" />
		<result property="frstRegisterNm" column="FRST_REGISTER_NM"
			columnIndex="6" />
		<result property="frstRegisterPnttm" column="FRST_REGIST_PNTTM"
			columnIndex="7" />
		<result property="atchFileId" column="ATCH_FILE_ID"
			columnIndex="8" />
	</resultMap>

	<insert id="SysHistoryDAO.insertSysHistory" parameterClass="SysHistory">
		<![CDATA[
			INSERT INTO COMTHSYSHIST
				( SYS_NM
				  , HIST_SE_CODE
				  , HIST_CN
				  , HIST_ID
				  , FRST_REGISTER_ID
				  , ATCH_FILE_ID
				  , FRST_REGIST_PNTTM )
			VALUES ( #sysNm#
				  , #histSeCode#
				  , #histCn#
				  , #histId#
				  , #frstRegisterId#
				  , #atchFileId#
				  , sysdate)
		]]>
	</insert>

	<update id="SysHistoryDAO.updateSysHistory" parameterClass="SysHistory">
		<![CDATA[
			UPDATE COMTHSYSHIST
			   SET SYS_NM = #sysNm#
				 , HIST_SE_CODE = #histSeCode#
				 , HIST_CN = #histCn#
				 , ATCH_FILE_ID = #atchFileId#
			 WHERE HIST_ID = #histId#
		]]>
	</update>

	<delete id="SysHistoryDAO.deleteSysHistory" parameterClass="SysHistory">
		<![CDATA[
			DELETE FROM COMTHSYSHIST
			 WHERE HIST_ID = #histId#
		]]>
	</delete>

	<select id="SysHistoryDAO.selectSysHistory" parameterClass="SysHistoryVO"
		resultMap="historyDetail">
		<![CDATA[
			SELECT a.HIST_ID
			     , a.SYS_NM
			     , c.CODE as HIST_SE_CODE
			     , c.CODE_NM as HIST_SE_CODE_NM
			     , a.HIST_CN
			     , b.USER_NM as FRST_REGISTER_NM
			     , a.FRST_REGIST_PNTTM
			     , a.ATCH_FILE_ID
			  FROM COMTHSYSHIST a
			     , COMVNUSERMASTER b
			     , COMTCCMMNDETAILCODE c
			 WHERE a.FRST_REGISTER_ID = b.ESNTL_ID
			   AND a.HIST_SE_CODE = c.CODE
			   AND c.CODE_ID = 'COM002'
			   AND HIST_ID = #histId#
		]]>
	</select>


	<select id="SysHistoryDAO.selectSysHistoryList" parameterClass="SysHistoryVO"
		resultMap="historyVO">
		<![CDATA[
		SELECT * FROM ( SELECT rownum rn, TB.* FROM (
			SELECT a.HIST_ID
			     , a.SYS_NM
			     , c.CODE as HIST_SE_CODE
			     , c.CODE_NM as HIST_SE_CODE_NM
			     , b.USER_NM as FRST_REGISTER_NM
			     , a.FRST_REGISTER_ID
			     , a.FRST_REGIST_PNTTM
			     , a.ATCH_FILE_ID
			  FROM COMTHSYSHIST a
			     , COMVNUSERMASTER b
			     , COMTCCMMNDETAILCODE c
			 WHERE a.FRST_REGISTER_ID = b.ESNTL_ID
			   AND a.HIST_SE_CODE = c.CODE
			   AND c.CODE_ID = 'COM002'
		]]>
		<isEqual prepend="AND" property="searchCnd" compareValue="0">
				<![CDATA[	a.SYS_NM LIKE '%' || #searchWrd# || '%' 		]]>
		</isEqual>
		<isEqual prepend="AND" property="searchCnd" compareValue="1">
				<![CDATA[	c.CODE_NM LIKE '%' || #searchWrd# || '%' 		]]>
		</isEqual>
		<![CDATA[
			ORDER BY a.FRST_REGIST_PNTTM DESC
			) TB ) WHERE rn BETWEEN #firstIndex# + 1 AND #firstIndex# + #recordCountPerPage#
		]]>

	</select>

	<select id="SysHistoryDAO.selectSysHistoryListCnt"
		parameterClass="SysHistoryVO" resultClass="java.lang.Integer">
		<![CDATA[
			SELECT COUNT(a.HIST_ID) as cnt
			  FROM COMTHSYSHIST a
			     , COMVNUSERMASTER b
			     , COMTCCMMNDETAILCODE c
			 WHERE a.FRST_REGISTER_ID = b.ESNTL_ID
			   AND a.HIST_SE_CODE = c.CODE
			   AND c.CODE_ID = 'COM002'
		]]>
		<isEqual prepend="AND" property="searchCnd" compareValue="0">
				<![CDATA[ a.SYS_NM LIKE '%' || #searchWrd# || '%'		]]>
		</isEqual>
		<isEqual prepend="AND" property="searchCnd" compareValue="1">
				<![CDATA[ c.CODE_NM LIKE '%' || #searchWrd# || '%'		]]>
		</isEqual>
	</select>

</sqlMap>
