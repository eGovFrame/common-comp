	<update id="HttpMonDAO.updateHttpMonSttus" parameterClass="HttpMon">
		<![CDATA[
            UPDATE  COMTNHTTPMON 
               SET  HTTP_STTUS_CODE     = #httpSttusCd#
                 ,  CREAT_DT          = #creatDt#
                 ,  LAST_UPDT_PNTTM = sysdate()
                 ,  LAST_UPDUSR_ID    = #lastUpdusrId#
