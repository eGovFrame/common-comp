            FROM  COMTHHTTPMONLOGINFO A
			LEFT  OUTER JOIN COMTCCMMNDETAILCODE B
				  ON B.CODE_ID    = 'COM072' 
			AND   A.HTTP_STTUS_CODE = B.CODE               
            WHERE A.WEBSVC_KND      = #webKind#
			AND   A.LOG_ID        = #logId#              
		]]>
